<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ImagesActivity"
    tools:showIn="@layout/activity_images">


    <TextView
        android:id="@+id/droid_Desserts_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/droid_Desserts_TextView"
        android:textSize="24sp"
        android:padding="@dimen/padding_regular"/>
    <TextView
        android:id="@+id/choose_dessert_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/droid_Desserts_TextView"
        android:padding="@dimen/padding_regular"
        android:text="@string/choose_dessert_TextView"
        />
    <ImageView
        android:id="@+id/donut_ImageView"
        android:padding="@dimen/padding_regular"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/choose_dessert_TextView"
        android:contentDescription="@string/donut_ImageView"
        android:src="@drawable/donut_circle"
        android:onClick="showDonutOrder"/>
    <TextView
        android:id="@+id/donut_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_wide"
        android:layout_below="@id/choose_dessert_TextView"
        android:layout_toRightOf="@id/donut_ImageView"
        android:layout_toEndOf="@id/donut_ImageView"
        android:text="@string/donut_ImageView"/>
    <ImageView
        android:id="@+id/ice_cream_ImageView"
        android:padding="@dimen/padding_regular"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/donut_ImageView"
        android:contentDescription="@string/ice_cream_ImageView"
        android:src="@drawable/icecream_circle"
        android:onClick="showIceCreamOrder"/>
    <TextView
        android:id="@+id/ice_cream_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_wide"
        android:layout_below="@id/donut_ImageView"
        android:layout_toRightOf="@id/ice_cream_ImageView"
        android:layout_toEndOf="@id/ice_cream_ImageView"
        android:text="@string/ice_cream_ImageView"/>
    <ImageView
        android:id="@+id/froyo_ImageView"
        android:padding="@dimen/padding_regular"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/ice_cream_ImageView"
        android:contentDescription="@string/froyo_ImageView"
        android:src="@drawable/froyo_circle"
        android:onClick="showFroyoOrder"/>
    <TextView
        android:id="@+id/froyo_TextView"
        android:padding="@dimen/padding_wide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ice_cream_ImageView"
        android:layout_toRightOf="@id/froyo_ImageView"
        android:layout_toEndOf="@id/froyo_ImageView"
        android:text="@string/froyo_ImageView"/>
</RelativeLayout>